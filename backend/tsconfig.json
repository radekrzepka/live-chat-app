{
   "ts-node": {
      "files": true
   },
   "files": ["src/index.ts", "src/global.d.ts"],
   "compilerOptions": {
      "target": "ES2015",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": false,
      "esModuleInterop": true,
      "module": "CommonJS",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "outDir": "./dist",
      "rootDir": "./src"
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules"]
}
